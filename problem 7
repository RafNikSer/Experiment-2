#include <stdio.h>
#include <iostream>
#include <iomanip>

using namespace std;

int main()
{
    int i, num, sum = 0;
    
    cout<< "Enter a positive integer: ";
    cin>> num;
    
   for (;;)
   {
   	if (num >0 )
   	{
	   
   	sum = 0;
   	for (i=1; i<= num; i++)
   	{
   		sum = sum + i;
	   }
   
   cout<< "the sum of all whole numbers from 1 to " << num <<" is " << sum<< "\n";
   cout << "enter a number "; cin>> num;
   
   }
   
    else if  (num <=0)
    {
    	cout<< " Thank you";
    	break;
	}
}
    return 0;
}
